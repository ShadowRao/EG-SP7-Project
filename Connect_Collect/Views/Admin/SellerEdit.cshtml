@{
}
@model Connect_Collect.Models.Entities.Seller
<link rel="stylesheet" href="~/css/CommonStyle.css" />
<h1> Edit Seller </h1>
@if (Model is null)
{
        <p> No Seller was found with this id</p>
}
else
{
        <form method="post">
        <div class="mt-3">
            <label class="form-label"> SellerId </label>
            <input type="text" class="form-control" asp-for="SellerId" readonly/>
        </div>
        <div class="mt-3">
            <label class="form-label"> SellerName</label>
            <input type="text" class="form-control" asp-for="SellerName" />
        </div>
        <div class="mt-3">
            <label class="form-label"> Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">

            <input type="hidden" class="form-control" asp-for="Password" />
        </div>
        <div class="mt-3">
            <label class="form-label"> Contact </label>
            <input type="text" class="form-control" asp-for="Contact" />
        </div>
        @* <div class="mt-3">
    <input type="checkbox" class="form-check-input" id="finish" asp-for="finish"/>
    <label class="form-check-label" for="finish"> Finish </label>
    </div> *@
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">SAVE</button>
            <button type="submit" class="btn btn-danger-custom" ms="3" asp-action="SellerDelete" asp-controller="Admin">DELETE </button>
        </div>
    </form>
}