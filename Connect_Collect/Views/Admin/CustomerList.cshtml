@{
    ViewData["Title"] = "List of Customers";
}
<link rel="stylesheet" href="~/css/CommonStyle.css" />
<div class="container mt-4">
    <h1 class="text-center">Customer Table</h1>
    <div class="table-responsive">
        <!-- Make the table responsive -->
        <table class="table table-bordered table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Address</th>
                    <th>Actions</th> <!-- Add header for action buttons -->
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.CustomerName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Password</td>
                        <td>@customer.Address</td>
                        <td>
                            <a asp-controller="Admin" asp-action="CustomerEdit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
