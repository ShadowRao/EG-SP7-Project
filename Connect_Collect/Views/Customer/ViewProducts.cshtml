@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/Layout2.cshtml"; // Set global layout
}
<link rel="stylesheet" href="~/css/CommonStyle.css" />
<h2 class="text-center">Available CHECK Products</h2>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 card-hover">
                    @* Display product image if available *@
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/images/placeholder.jpg" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.ProductDescription</p>
                        <p class="text-muted">Sold by: @product.Seller.SellerName</p> <!-- Show seller's name -->
                        <h6 class="text-primary">$@product.Price</h6>
                    </div>

                    <div class="card-footer text-center">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">View Details</a>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" >AdSSSSd to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .card-hover {
        transition: transform 0.3s ease-in-out;
    }

        /* Scale the card up when hovered */
        .card-hover:hover {
            transform: translateY(-10px); /* Makes the card 'jump' up */
        }

    .btn:hover {
        transform: translateY(-5px); /* Move up slightly */
        transition: transform 0.3s ease-in-out;
    }
</style>
