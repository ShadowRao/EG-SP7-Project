@{
    Layout = "~/Views/Shared/LayoutCustomer.cshtml"; // Set global layout
}

<link rel="stylesheet" href="~/css/CommonStyle.css" />
<h1 class="text-center mt-4">Welcome, @Model.CustomerName!</h1>

<div class="container mt-4">
    <div class="dashboard-section">
        <h2>Your Dashboard</h2>
        <p>Here you can manage your profile, view your orders, and explore our products.</p>
    </div>

    <div class="dashboard-section mt-4">
        <h3>Your Profile</h3>
        <p>Email: @Model.Email</p>
       
    </div>

    <div class="dashboard-section mt-4">
        <h3>Products</h3>
        <p>View products here!</p>
        <a asp-action="ViewProducts" asp-controller="customer" class="btn btn-success">View Products</a>
    </div>

   

  

   
</div>
