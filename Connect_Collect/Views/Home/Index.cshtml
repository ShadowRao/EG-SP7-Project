@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/CommonStyle.css" />

<div class="home-container">
    <h1 class="display-4">Welcome to Connect & Collect!</h1>
    <p>We are EG's Internal Flea Market & Community Hub—your one-stop platform for everything from decluttering to settling into a new city! Here at EG, we're not just pioneers in Nordic vertical software; we’re all about building connections too. Whether you're looking to sell your gadgets, lease your apartment, or lend a hand to a newcomer finding their way around, this is the place for you! Think of it as EG’s own little OLX, where colleagues help colleagues, making relocations, sales, and city life that much easier. Happy browsing and connecting!</p>
</div>

<!-- Display Available Products -->
<h2 class="text-center">Available Products</h2>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 card-hover">
                    <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : Url.Content("~/images/placeholder.jpg"))"
                         class="card-img-top"
                         alt="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ProductName : "No Image")"
                         style="height: 200px; object-fit: cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="text-muted">Sold by: @product.Seller.SellerName</p>
                        <h6 class="text-primary">$@product.Price</h6>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-primary"
                                data-toggle="modal"
                                data-target="#productModal"
                                data-id="@product.ProductId"
                                data-name="@product.ProductName"
                                data-description="@product.ProductDescription"
                                data-price="@product.Price"
                                data-image-url="@product.ImageUrl">
                            View Details
                        </button>

                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-success">Send Request</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Product Image" class="img-fluid mb-3" />
                <h5 id="modalProductName"></h5>
                <p id="modalProductDescription"></p>
                <h6 class="text-primary" id="modalProductPrice"></h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Keep existing styles and add new ones for product display */
    body {
        font-family: 'Times New Roman', Times, serif, sans-serif;
        background-color: #E6E6FA;
        margin: 0;
        padding: 0;
    }

    .home-container {
        max-width: 800px;
        text-align: center;
        padding: 20px;
        margin: 100px auto;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 2.5rem;
        color: #4B0082;
        margin-bottom: 20px;
    }

    p {
        font-size: 1rem;
        line-height: 1.6;
        color: #2D1E3E;
        margin-bottom: 20px;
    }

    a {
        color: #BA55D3;
        text-decoration: none;
    }

    a:hover {
        color: #8A2BE2;
        text-decoration: underline;
    }

    .card-hover {
        transition: transform 0.3s ease-in-out;
    }

    .card-hover:hover {
        transform: translateY(-10px);
    }

    .btn:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease-in-out;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $('#productModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var productId = button.data('id');
        var productName = button.data('name');
        var productDescription = button.data('description');
        var productPrice = button.data('price');
        var imageUrl = button.data('image-url');

        var modal = $(this);
        modal.find('#modalProductName').text(productName);
        modal.find('#modalProductDescription').text(productDescription);
        modal.find('#modalProductPrice').text('$' + productPrice);
        modal.find('#modalImage').attr('src', imageUrl || '~/images/placeholder.jpg');
    });
</script>
