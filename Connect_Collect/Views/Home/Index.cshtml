@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/CommonStyle.css" />

<div class="home-container">
    <h1 class="display-4">Welcome to Connect & Collect!</h1>
    <p>We are EG's Internal Flea Market & Community Hub—your one-stop platform for everything from decluttering to settling into a new city! Here at EG, we're not just pioneers in Nordic vertical software; we’re all about building connections too. Whether you're looking to sell your gadgets, lease your apartment, or lend a hand to a newcomer finding their way around, this is the place for you! Think of it as EG’s own little OLX, where colleagues help colleagues, making relocations, sales, and city life that much easier. Happy browsing and connecting!</p>
</div>


<!-- Display Recommended Products -->
<h2 class="text-center">Recommended Products</h2>
<div id="productCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            int count = 0;
            int itemsPerSlide = 3; // Set the number of products per slide
            foreach (var productGroup in Model.Chunk(itemsPerSlide))
            {
                <div class="carousel-item @(count == 0 ? "active" : "")">
                    <div class="container">
                        <div class="row">
                            @foreach (var product in productGroup)
                            {
                                <div class="col-md-4 col-sm-6 mb-4">
                                    <div class="card h-100 card-hover">
                                        <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : Url.Content("~/images/placeholder.jpg"))"
                                             class="card-img-top"
                                             alt="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ProductName : "No Image")"
                                             style="height: 200px; object-fit: cover;" />

                                        <div class="card-body">
                                            <h5 class="card-title">@product.ProductName</h5>
                                            <p class="text-muted">Sold by: @product.Seller.SellerName</p>
                                            <h6 class="text-primary">$@product.Price</h6>
                                        </div>

                                        <div class="card-footer text-center">
                                            <button class="btn btn-primary"
                                                    data-toggle="modal"
                                                    data-target="#productModal"
                                                    data-id="@product.ProductId"
                                                    data-name="@product.ProductName"
                                                    data-description="@product.ProductDescription"
                                                    data-price="@product.Price"
                                                    data-image-url="@product.ImageUrl">
                                                View Details
                                            </button>

                                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-success">Send Request</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                count++;
            }
        }
    <!-- Carousel Controls -->
    <a class="carousel-control-prev" style="left:-50px" href="#productCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" style="right:-50px" href="#productCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
</div>


<br>

<br>
<h2 class="text-center">Available Products</h2>
<div id="productCarousel" style="padding-top:1px;" class="carousel slide" data-ride="carousel">

<!-- Display Available Products -->


<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 card-hover">
                    <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : Url.Content("~/images/placeholder.jpg"))"
                         class="card-img-top"
                         alt="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ProductName : "No Image")"
                         style="height: 200px; object-fit: cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="text-muted">Sold by: @product.Seller.SellerName</p>
                        <h6 class="text-primary">$@product.Price</h6>
                    </div>

                    <div class="card-footer text-center">
                        <button class="btn btn-primary"
                                data-toggle="modal"
                                data-target="#productModal"
                                data-id="@product.ProductId"
                                data-name="@product.ProductName"
                                data-description="@product.ProductDescription"
                                data-price="@product.Price"
                                data-image-url="@product.ImageUrl">
                            View Details
                        </button>

                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-success">Send Request</a>
                    </div>
                </div>
            </div>
        }
    </div>


</div>
</div>




<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Product Image" class="img-fluid mb-3" />
                <h5 id="modalProductName"></h5>
                <p id="modalProductDescription"></p>
                <h6 class="text-primary" id="modalProductPrice"></h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

